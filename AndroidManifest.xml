<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="2"
          android:versionName="1.0.0-SNAPSHOT"
          package="nl.enterprisecoding.android.sufficient">

    <uses-sdk android:minSdkVersion="15"
              android:targetSdkVersion="18"/>

    <application android:label="@string/app_name"
                 android:theme="@style/ECTheme"
                 android:icon="@drawable/ic_launcher"
               >


        <activity android:name="nl.enterprisecoding.android.sufficient.activities.TaskActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@style/ECTheme"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="nl.enterprisecoding.android.sufficient.activities.MainActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

        <activity android:name="nl.enterprisecoding.android.sufficient.activities.CategoryActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@style/ECTheme" />

        <activity android:name="nl.enterprisecoding.android.sufficient.activities.EditCategoryActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@style/ECTheme" />

        <activity android:name="nl.enterprisecoding.android.sufficient.activities.AddTaskActivity"
                  android:label="@string/action_add"
                  android:screenOrientation="portrait"
                  android:theme="@style/ECTheme" />

        <activity android:name="nl.enterprisecoding.android.sufficient.activities.EditTaskActivity"
                  android:label="@string/action_edit"
                  android:screenOrientation="portrait"
                  android:theme="@style/ECTheme" />

    </application>
</manifest>
